<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginHorizontal="8dp"
        android:background="@color/brown3"
        android:id="@+id/ll_qna_list"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/txt_qna_list_num"
            android:textColor="@color/brown1"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="번호"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/brown1"/>
        <TextView
            android:id="@+id/txt_qna_list_username"
            android:textColor="@color/brown1"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:layout_weight="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/brown1"/>
        <TextView
            android:id="@+id/txt_qna_list_title"
            android:textColor="@color/brown1"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:layout_weight="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목" />
    </LinearLayout>

</RelativeLayout>
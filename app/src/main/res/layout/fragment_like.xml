<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brown4">
        <TextView
            android:id="@+id/txt_board_title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="즐겨찾기 리스트"
            android:typeface="serif"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/brown1"
            android:paddingVertical="16dp"
            android:background="@color/brown3"/>
        <View
            android:id="@+id/line_board_title"
            android:layout_below="@+id/txt_board_title"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/brown2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/line_board_title"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_board_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:layout_marginLeft="16dp"
                android:text="내가 즐겨찾는 이벤트"
                android:textColor="@color/brown1"
                android:textSize="16dp"
                android:typeface="serif" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/brown2" />

            <!--<TextView-->

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/brown4">
    <RelativeLayout
        android:id="@+id/rl_event_like_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="내가 즐겨찾는 이벤트"
            android:typeface="serif"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/brown1"
            android:paddingVertical="16dp"
            android:background="@color/brown3"/>
        <ImageView
            android:id="@+id/img_event_like_back"
            android:layout_centerVertical="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_arrow_left"/>
</RelativeLayout>
    <TextView
        android:id="@+id/txt11"
        android:layout_below="@+id/rl_event_like_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이벤트 목록"
        android:textColor="@color/brown1"
        android:typeface="serif"
        android:layout_margin="8dp"
        />

    <View
        android:id="@+id/view"
        android:layout_below="@+id/txt11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/brown1" />
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/view"
                android:id="@+id/event_like_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
</RelativeLayout>
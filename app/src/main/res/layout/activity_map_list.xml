<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/brown3"
        android:id="@+id/rl_store_list"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_store_or_market"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="시장"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="16dp"
            android:textColor="@color/brown1"
            android:layout_marginHorizontal="16dp"/>

        <View
            android:id="@+id/line2"
            android:layout_toRightOf="@+id/txt_store_or_market"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/brown1"/>

        <TextView
            android:id="@+id/txt_store_name"
            android:layout_toRightOf="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingVertical="8dp"
            android:text="이름"
            android:typeface="serif"
            android:textSize="16dp"
            android:textColor="@color/brown1"
            android:layout_marginLeft="8dp"/>
    </RelativeLayout>
    <View
        android:layout_marginHorizontal="16dp"
        android:id="@+id/line1"
        android:layout_below="@+id/rl_store_list"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/brown1"/>
    <TextView
        android:id="@+id/txt_store_address"
        android:layout_below="@+id/line1"
        android:layout_marginHorizontal="16dp"
        android:background="@color/brown3"
        android:layout_width="match_parent"
        android:textSize="16dp"
        android:textColor="@color/brown1"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:typeface="serif"
        android:layout_height="40dp"
        android:text="도로명주소"
        />


    <View
        android:layout_marginVertical="4dp"
        android:id="@+id/line3"
        android:layout_below="@+id/txt_store_address"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/brown1"/>

</RelativeLayout>